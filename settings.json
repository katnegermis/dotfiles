{
  "window.zoomLevel": -1,
  "files.trimTrailingWhitespace": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.formatOnPaste": true,
  "explorer.confirmDelete": false,
  "python.formatting.autopep8Args": [
    "--max-line-length=200"
  ],
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--ignore=E501"
  ],
  // "python.pythonPath": "/usr/bin/python3",
  "python.venvPath": "~/.virtualenvs/",
  "editor.wordWrapColumn": 150,
  "vim.textwidth": 150,
  "prettier.printWidth": 150,
  "editor.minimap.showSlider": "always",
  "files.exclude": {
    "**/*.pyc": true,
    "**/__pycache__": true,
    "**/.vscode": true
  },
  "explorer.confirmDragAndDrop": false,
  "go.useLanguageServer": true,
  "go.alternateTools": {
    "go-langserver": "gopls"
  },
  "go.languageServerExperimentalFeatures": {
    "format": false,
    "autoComplete": true,
    "goToDefinition": true,
    "hover": true,
    "signatureHelp": true,
    "goToTypeDefinition": true,
    "rename": true,
    "findReferences": true,
    "diagnostics": false // for build and vet errors as you type
  },
  "go.buildOnSave": "package",
  "go.vetOnSave": "package",
  "editor.formatOnSave": true,
  "go.testFlags": [
    "-count=1"
  ],
  "vim.useCtrlKeys": false,
  "go.testTimeout": "30s",
  "[go]": {
    "editor.snippetSuggestions": "inline",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.codeActionsOnSaveTimeout": 15000,
    "editor.defaultFormatter": "ms-vscode.Go"
  },
  "gopls": {
    "usePlaceholders": false, // add parameter placeholders when completing a function
    "wantCompletionDocumentation": true, // for documentation in completion items
    "env": {
      "GOPRIVATE": "git.haps.pw/*,gitlab.com/micvbang/*"
    },
  },
  "files.eol": "\n",
  "workbench.sideBar.location": "right",
  "terraform.indexing": {
    "enabled": false,
    "liveIndexing": false,
    "delay": 500,
    "exclude": [
      ".terraform/**/*",
      "**/.terraform/**/*"
    ]
  },
  "terraform.languageServer": {
    "enabled": true,
    "args": []
  } // formatting only supports LF line endings
}